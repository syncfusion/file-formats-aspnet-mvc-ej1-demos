@using Syncfusion.JavaScript.DataVisualization


@section SampleHeading{<span class="sampleName">XlsIO-Excel To PDF-ASP.NET MVC-SYNCFUSION</span>}

 @section ControlsSection{                                
	      @{ViewBag.Title = "    Essential XlsIO (Excel) :Excel To PDF Conversion : Syncfusion";}


@{ Html.BeginForm("ExcelToPDF", "XlsIO", FormMethod.Post);
 {
    <div class="Common">
        <div class="tablediv">
            <div class="rowdiv">
                This sample illustrates the conversion of a MS Excel document to a PDF format.
                <br />
                <br />Essential XlsIO allows to export the Excel document into PDF document. Use the Convert method of ExcelToPDFConverter class to convert the Excel to PDF and save the PDF document. This enabling user easily converts the Excel document to PDF document.
                <br />
                <br /><b>Features:</b>
                <br />
                <br />
                <ul>
                    <li>Supports conversion of a Excel document to PDF document</li>
                </ul>
                <br />
                <b>Note:</b> Installation of Essential PDF and ExcelChartToImageConverter is necessary to run this sample
            </div>
            <br />
            <div class="rowdiv">
                <label>
                    Clicking the button below will result in a PDF document being converted from Excel document using Essential XlsIO and Essential PDF.
                    Please note that you need to have a PDF viewer installed in order to view the generated PDF file.
                </label>
            </div>
			<br />
            <div class="rowdiv">
                <label>
                    PDF Page Setup options
                </label>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <input type="radio" id="noScaleRadioBtn" name="Group1" value="NoScaling" />
                    <label for="noScaleRadioBtn">
                        NoScaling
                    </label>
                    <input type="radio" id="allRowsRadioBtn" name="Group1" value="FitAllRowsOnOnePage" />
                    <label for="allRowsRadioBtn">
                        FitAllRowsOnOnePage
                    </label>
                    <input type="radio" id="allColumnRadioBtn" name="Group1" value="FitAllColumnsOnOnePage" />
                    <label for="allColumnRadioBtn">
                        FitAllColumnsOnOnePage
                    </label>
                    <input type="radio" id="fitSheetRadioBtn" name="Group1" value="FitSheetOnOnePage" checked="checked" />
                    <label for="fitSheetRadioBtn">
                        FitSheetOnOnePage
                    </label>
                </div>
                <br />


                <div class="celldiv">
                    <input class="buttonStyle" type="submit" value="Convert to PDF" name="button" style="width:200px;" />
                </div>
            </div>
        </div>
    </div>
     Html.EndForm();
 } }               
              }

