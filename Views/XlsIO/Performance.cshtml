@using Syncfusion.JavaScript.DataVisualization


@section SampleHeading{<span class="sampleName">XlsIO-Performance-ASP.NET MVC-SYNCFUSION</span>}

 @section ControlsSection{                                
   
@{ViewBag.Title="    Essential XlsIO (Excel) : Performance : Syncfusion";}

    @{Html.BeginForm("Performance", "XlsIO", FormMethod.Post);
      {  
    <div class="Common">
        <div class="tablediv">
            <div class="rowdiv">
                Essential XlsIO is known for its high performance and simple APIs that have most of the functionalities of Excel.
                <br />
                <br />
                <b>Features:</b>
                <br />
                <br />
                <ul>
                    <li>Creating rich, large reports with styles</li>	
                    <li>Performance optimization methods</li>
                </ul>
                <b>Notes:</b>
                <br />
                <ul>
                    <li>When more styles are added, it is recommended that you use global styles within BeginUpdate and EndUpdate calls.</li>	
                    <li>The use of IMigrant Range will reduce the amount of memory used when large amounts of strings are involved.</li>
                </ul>
            </div>
            <br />
            <div class="rowdiv">
                <label>
                    Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                    note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.</label>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <table>
                        <tr>
                            <td width="200px">Enter the Number of Rows</td>
                            <td>@Html.TextBox("lblRows")</td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="celldiv">
                    <table>
                        <tr>
                            <td width="200px">Enter the Number of Columns</td>
                            <td>@Html.TextBox("lblColumns")</td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        <strong>  Save As :</strong>
                    </label>
                    <input id="rbtnXls" type="radio" name="SaveOption" value="Xls" />
                    <label for="rbtnXls">
                        XLS
                    </label>
                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <input id="rbtnXlsx" type="radio" name="SaveOption" value="Xlsx" checked="checked" />
                    <label for="rbtnXlsx">
                        XLSX
                    </label>
                </div>
                <br />
                <div class="celldiv">
                    <input class="buttonStyle" type="submit" value="Create Document" style=" width:200px;"/>
                </div>
                <div class="celldiv">
                    <label id="lblStatus" >
                        
                    </label>
                </div>
            </div>
        </div>
    </div>
          <script type="text/javascript">
        $(document).ready(function () {
            $("#lblRows").val(50000);
            $("#lblColumns").val(50);
        });
    </script>
     Html.EndForm();
      } }  
}

