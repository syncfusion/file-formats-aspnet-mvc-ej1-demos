@{
    ViewBag.Title = "Default";
}

@section SampleHeading{
    <span class="sampleName">Signature-Default Functionalities-ASP.NET MVC-SYNCFUSION</span>}
@section MetaTags{
   <meta name="description" content="This example demonstrates how to capture or draw smooth signatures using the Syncfusion ASP.NET MVC Signature component.">
}
@section ControlsSection{

    <div class="frame">
        <div class="control">
		 <h3>Sign here</h3>
            @Html.EJ().Signature("sign").Height("400px").StrokeWidth(3).IsResponsive(true)
        </div>
    </div>

}
@section StyleSection{

    <style type="text/css">
        .frame {
            width: 80%;
        }
    </style>
}



