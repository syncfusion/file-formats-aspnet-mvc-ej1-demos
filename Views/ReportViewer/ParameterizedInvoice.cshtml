@section SampleHeading{ <span class="sampleName">ReportViewer/Invoice Parameter</span>}

@using Syncfusion.JavaScript
@using Syncfusion.MVC.EJ

@section StyleSection{
    <style>
        #reportviewer {
            min-height: 650px;
            min-width: 100%;
        }
    </style>
}
@section ScriptReferenceSection{
}

@section ControlsSection{
    <div style="width:100%">
        @(
            Html.EJ().ReportViewer("reportviewer")
              .ProcessingMode(Syncfusion.JavaScript.ReportViewerEnums.ProcessingMode.Remote).ReportPath("~/App_Data/Reports/InvoiceTemplate.rdl")
              .ReportServiceUrl(VirtualPathUtility.ToAbsolute("~/api/RDLReport")).Parameters(param =>
                  {
                      param.Name("InvoiceID").Labels(new List<string>() { "InvoiceID" }).Values(new List<string>() { "10250" }).Add();
                  })
        )
    </div>
}